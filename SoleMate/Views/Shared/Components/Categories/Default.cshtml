@model IEnumerable<Category>

<ul class="list-group  table table-striped">
    <li class="list-group-item">
        <a class="nav-link text-dark fw-bolder" asp-controller="Products" asp-action="Index" asp-route-categorySlug="">All Products</a>
    </li>

   

    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <a class="nav-link text-dark" asp-controller="Products" asp-action="Index" asp-route-categorySlug="@item.Slug">@item.Name</a>
        </li>
    }
</ul>

